        <TextView
            android:id="@+id/textViewGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dividerPadHeight"
            android:paddingBottom="@dimen/dividerPadHeight"
            android:textColor="@color/green"
            android:textSize="@dimen/textSize"
            tools:text="Lorianne\nKikobiso" />

        <TextView
            android:id="@+id/textViewAny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dividerPadHeight"
            android:textColor="@color/any"
            android:textSize="@dimen/textSize"
            tools:text="Eva 21200\n\nGlobeCookeuse\nMrs JONES Angie\n\nParadises'Isle
